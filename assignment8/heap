#include<iostream>
#include <vector>
using namespace std;

void heapsort (vector<int>&heap, int i, int n) {
    int largest=i;
    int left= 2*i +1;
    int right= 2*i +2;
    if (left<n && heap[left]>heap[largest])   largest=left;


    if (right<n && heap[right]>heap[largest]) largest= right;

    if (largest!=i) {
        swap(heap[largest],heap[i]);
        heapsort(heap,i,largest);
    }
}
    void heapSort(vector<int>& heap) {
    int n = heap.size();


    for (int i = n / 2 - 1; i >= 0; i--) {
        heapsort(heap, n, i);
    }


    for (int end = n - 1; end > 0; end--) {
        swap(heap[0], heap[end]);
        heapsort(heap, end, 0);
    }
}

    int main() {
    vector<int> arr = {4, 10, 3, 5, 1};

    heapSort(arr);

    cout << "Sorted array: ";
    for (int x : arr) {
        cout << x << " ";
    }
    cout << endl;

    return 0;
}






